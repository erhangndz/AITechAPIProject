@model UpdateProjectDto
@{
    ViewData["Title"] = "UpdateProject";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Proje Güncelle</h3>

<form method="post">
    <input type="hidden" asp-for="Id" />
    <label>Başlık</label>
    <input type="text" asp-for="Title" class="form-control" />
    <span class="text-danger" asp-validation-for="Title"></span>
    <br />
    <label>Görsel Url</label>
    <input type="text" asp-for="ImageUrl" class="form-control" />
    <span class="text-danger" asp-validation-for="ImageUrl"></span>
    <br />
    <label>Kategori</label>
    <select type="text" asp-for="CategoryId" class="form-control" asp-items="@ViewBag.categories">
        <option selected>Kategori Seçiniz</option>

    </select>
    <span class="text-danger" asp-validation-for="CategoryId"></span>
    <br />
    <button class="btn btn-primary">Güncelle</button>
</form>